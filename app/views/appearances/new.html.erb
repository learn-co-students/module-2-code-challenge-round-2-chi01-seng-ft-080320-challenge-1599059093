<h1>Add a new Appearance!!!! </h1>


<%if flash[:errors]%>
    <%flash[:errors].each do |error|%>
    <p style="color: red"><%= error%></p>
    <%end%>
<%end%>


<%= form_for @appearance do |f| %>
    <%= f.label :rating %>
    <%= f.number_field :rating %><br><br>
    <%= f.label :guest %>
    <%= f.collection_select :guest_id, @guests, :id, :name %><br><br>
    <%= f.label :episode %>
    <%= f.collection_select :episode_id, @episodes, :id, :date %><br><br>
    <%= f.submit %>
<%end%>