<h1> Create New Appearance </h1>

<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<p style="color: red"> <%= error %> </p>
<% end %>
<% end %>

<%= form_for @appearance do |f| %>
<%= f.label :guest_id %>
<%= f.collection_select :guest_id, @guests, :id, :name %><br>
<%= f.label :episode_id %>
<%= f.collection_select :episode_id, @episodes, :id, :number %><br>
<%= f.label :rating %>
<%= f.number_field :rating, min: 1, max: 5 %><br>
<%= f.submit %>
<% end %>

<br>
<br>
 
 <%= button_to "Return to Episode List", episodes_path, {method: :get} %>