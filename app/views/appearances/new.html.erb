<h1> New Appearance </h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p style="color:red"><%= error %></p>
    <% end %>
<% end %>

<%= form_for @appearance do |f| %>
<%= f.label :rating %>
<%= f.number_field :rating, min: 1, max: 5 %><br>

<%= f.label :guest_id %>
<%= f.collection_select :guest_id, Guest.all, :id, :name %><br>

<%= f.label :episode_id %>
<%= f.collection_select :episode_id, Episode.all, :id, :number %><br>

<%= f.submit %>
<% end %>



