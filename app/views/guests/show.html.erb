<h1>Guest Show Page</h1>

<h4>Guest: <%= @guest.name %></h4>
<h4>Episode appearances: </h4>
<ul>
<% @guest.episodes.each do |episode| %>
    <% @guest.appearances.each do |appearance| %>
        <% if episode.id == appearance.episode_id %>
        <% @rating = appearance.rating %>
        <% end %>
    <% end %>
<li><%= link_to "#{episode.date} | Rating: #{@rating}", episode_path(episode) %></li>
<% end %>
</ul>


